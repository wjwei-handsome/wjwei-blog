<script>
  import TypeIt from "typeit";

  // 等待 DOM 和外部脚本加载完成
  window.addEventListener("load", function () {
    new TypeIt("#typing-area", {  // 修改为正确的选择器
      speed: 150,               // 可选：调整打字速度
      waitUntilVisible: true,  // 可选：等到元素可见时才开始
      cursor: true,
      breakLines: false,
    }).
    type('❯ <span class="typingcmd">wjwei</span> --help').
    pause(500).
    break({instant: true}).
    break({instant: true}).
    type("Name: Wenjie Wei", {instant: true}).
    break({instant: true}).
    type("Version: 2024", {instant: true}).
    break({instant: true}).
    type('Usage: wjwei [OPTIONS] <', {instant: true}).
    type('COMMANDS>', {instant: true}).
    break({instant: true}).
    type("Commands:", {instant: true}).
    break({instant: true}).
    type('<span>&nbsp;&nbsp;</span>🧬bioinfo:', {instant: true}).
    break({instant: true}).
    type("<span>&nbsp;&nbsp;&nbsp;&nbsp;</span>Play biological problems with code. Years of experience in bioinformatics analysis", {instant: true}).
    break({instant: true}).
    type("<span>&nbsp;&nbsp;</span>🛠️coder:", {instant: true}).
    break({instant: true}).
    type("<span>&nbsp;&nbsp;&nbsp;&nbsp;</span>Get my hands dirty! Always be a rookie and stay hungry. Enjoy contributing to the community.", {instant: true}).
    break({instant: true}).
    type("<span>&nbsp;&nbsp;</span>🙌life:", {instant: true}).
    break({instant: true}).
    type("<span>&nbsp;&nbsp;&nbsp;&nbsp;</span>Work hard, play harder! Enjoy dopamine and endorphins from nature🏞, food🥑, coffee☕️, movies🎥, music🎧 and sports🏋.", {instant: true}).
    break({instant: true}).
    type("<span>&nbsp;&nbsp;</span>👨‍🎓student:", {instant: true}).
    break({instant: true}).
    type("<span>&nbsp;&nbsp;&nbsp;&nbsp;</span>Master of Crop genomics in the National Laboratory of Crop Genetic Improvement, HZAU.", {instant: true}).
    break({instant: true}).
    type("<span>&nbsp;&nbsp;&nbsp;&nbsp;</span>PhD student of WestLake University.", {instant: true}).
    break({instant: true}).
    type("<span>&nbsp;&nbsp;&nbsp;&nbsp;</span>Interested in: [genomics, genetics, tools, databases].", {instant: true}).
    break({instant: true}).
    type("<span>&nbsp;&nbsp;</span>🎮gamer:", {instant: true}).
    break({instant: true}).
    type("<span>&nbsp;&nbsp;&nbsp;&nbsp;</span>Hundreds of hours of Zelda/Pokemon/Stardew Valley.", {instant: true}).
    break({instant: true}).
    type("Options:", {instant: true}).
    break({instant: true}).
    type("<span>&nbsp;&nbsp;</span>-l, --linux\t💻Unix/Commmand Line/Fish enthusiast\t[default: true]", {instant: true}).
    break({instant: true}).
    type("<span>&nbsp;&nbsp;</span>-r, --rust\t🦀YES! I'm a Rustacean!\t[default: true]", {instant: true}).
    break({instant: true}).
    type("<span>&nbsp;&nbsp;</span>-p, --python\t🐍A cold weapon still in hand with me.\t[default: true]", {instant: true}).
    break({instant: true}).
    type("<span>&nbsp;&nbsp;</span>-v, --visualize\t📊Prefer vega-lite/R for data presentation.\t[default: true]", {instant: true}).
    break({instant: true}).
    type("<span>&nbsp;&nbsp;</span>-f, --frontend\t🌐Stay at the basic stage for Vue/React\t[default: false]", {instant: true}).
    break({instant: true}).
    type("<span>&nbsp;&nbsp;</span>-h, --haskell\t🧸Elegant new toys, not yet familiar\t[default: false]", {instant: true}).
    break({instant: true}).
    break({instant: true}).
    type('❯ <span class="typingcmd">echo</span> <span class="typingvar">$MOTTO</span>').
    break({instant: true}).
    type("A ship in a harbour is safe but that is not what ships are built for.", {instant: true}).
    break({instant: true}).
    break({instant: true}).
    type('❯ ').

    go();
  });
</script>
