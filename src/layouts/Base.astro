---
import BaseHead from "@/components/BaseHead";
import Header from "@/components/Header";
import Footer from "@/components/Footer";
import { siteConfig } from "../consts.ts";
import ui from "@/ui/ui";

interface Props {
	title?: string;
	description?: string;
	image?: string;
}

const {
	title = siteConfig.title,
	description = ui["site.description"].text,
	image,
} = Astro.props;
---

<!doctype html>
<html lang={Astro.currentLocale} class="dark">
	<head>
	     <!-- Google tag (gtag.js) -->
        <script is:inline type="text/partytown" async src="https://www.googletagmanager.com/gtag/js?id=G-MMW29HLBNX"></script>
        <script type="text/partytown" is:inline>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());

            gtag('config', 'G-MMW29HLBNX');
        </script>
		<BaseHead title={title} description={description} image={image} />
	</head>
	<body>
		<Header />
		<main>
			<section class="cody-bg">
				<slot />
			</section>
		</main>
		<Footer />
	</body>
</html>
